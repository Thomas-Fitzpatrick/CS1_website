<% include ../partials/header %>


<div class="container">
    <div>
        <p class="spacer"></p>
        <h1 style="text-align: center">Submit new Syllabus</h1>
            <div style="width:30%; margin: 25px auto">
                <form id="comment_form" action="/sigcse2019/submissions" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Country of Course" name="submission[country]"> 
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="URL of Syllabus" name="submission[url]"> 
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Course Code" name="submission[code]"> 
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Course Title" name="submission[title]"> 
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Institution" name="submission[institution]"> 
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Email (optional)" name="submission[email]"> 
                        <p>Email will only be used to contact you in relation to this submission.</p>
                    </div>
                    
                    <div class="g-recaptcha" data-sitekey="6LfCu6QUAAAAAEezAOo6cKf4AxrF4lIvSifLUfJg"></div><br>
                    
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
            </div>
            <div class="d-flex flex-column justify-content-center align-items-center">
                <p>By clicking submit, this information will be sent to Brett Becker.</p>
                <p>Brett can be contacted at: <a href="https://www.cs.ucd.ie/AcademicProfile/BrettBecker/">https://www.cs.ucd.ie/AcademicProfile/BrettBecker/</a></p>
            </div>
    </div>
    <p class="spacer"></p>
</div>


<% include ../partials/footer %>
